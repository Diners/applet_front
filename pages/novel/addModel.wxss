/* pages/novel/addModel.wxss */
text{
  font-family: "微软雅黑";
}
.add_box{
  width: 100%;
  height: auto;
  float: left;
  text-align: center;
}
.add_yin{
  width: 100%;
  height: 100rpx;
  float: left;
}
.lis{
  width: 100%;
  height: auto;
  float: left;
  padding-left: 105rpx;
  padding-right: 105rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 289rpx;
}
.add_box image:nth-of-type(1){
  width:400rpx;
}
.lis image:nth-of-type(1){
  float: left;
  width: 200rpx;
}
.lis image:nth-of-type(2){
  float: right;
  width: 200rpx;
}
.close{
  width: 100%;
  height: auto;
  float: left;
  position: absolute;
  bottom: 60rpx;
}
.close image:nth-of-type(1){
  width: 80rpx;
}



.toast{
  width: 100%;
  height: 124rpx;
  position: absolute;
  top: 30rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.toast_son{
  width: 100%;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  background: #ffdd00;
}
.toast_son text:nth-of-type(1){
 width: 80%;
 height: 100%;
 float: left;
 line-height: 40rpx;
 display: block;
 color: white;
 font-size: 26rpx;
}
.toast_son image:nth-of-type(1){
  width: 40rpx;
  float: right;
}
