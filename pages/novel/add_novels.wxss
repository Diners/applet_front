.select_img{
  width: 100%;
  background: #f6f6f6;
  height: 590rpx;
  text-align: center;
  line-height: 590rpx;
  overflow: hidden;
}
.select_img .addImg{
  width: 108rpx;
  height: 136rpx;
  vertical-align: middle;
}
.select_img  .fixImg{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.section{
  width: 89.4%;
  margin: 0 auto;
  margin-top: 80rpx;
}
.section input{
  width: 91%;
  height: 88rpx;
  line-height: 88rpx;
  border: 3rpx solid #f6f6f6;
  color: #aaa;
  font-size:26rpx;
   padding:0 30rpx;
  border-radius: 6rpx;
}
.section textarea{
  width: 91%;
  height: 120rpx;
  border: 3rpx solid #f6f6f6;
  color: #aaa;
  font-size:26rpx;
  padding: 30rpx;
  border-radius: 6rpx;
}
.describe{
  float: left;
}
.describe image{
  width: 36rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right: 24rpx;
}
.publish{
  width: 66rpx;
  height: 66rpx;
  float: right;
  vertical-align: middle;
}
.publish1{
  width: 66px;
  height: 66rpx;
  line-height: 66rpx;
  float: right;
  vertical-align: middle;
  background: #000;
  color: #fff;
  font-size: 12px;
  text-align: center;
  border-radius:0 !important;
