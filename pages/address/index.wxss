/* pages/address/address.wxss */
page{
  background-color: #f6f6f6;
}
.add-address{
    margin: 100rpx auto;
    width:100rpx;
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
}
.add-address image{
 width:100rpx;
 height:100rpx;
 vertical-align: middle;
}
.address-content .address_content{
  margin:20px 0;
  width: 100%;
  padding: 0;
}
.address-content .item_clearfix{
  height:60px;width:90%;
  background-color: #fff
  ;position: relative;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 32rpx;
}
.item_clearfix .left{
   width:68%;
   height: 100%;
   float: left;
}
.item_clearfix .forTo{
       width:30.5%;
       height:60px;
       line-height: 60px;
       float: left;
}
.item_clearfix .forTo image{
      width:36rpx;
      height:38rpx;
      vertical-align: middle;
}

.item_clearfix .forTo .line{
  width: 1px;
  height: 20rpx;
  display: inline-block;
  background-color: #aaa;
}
.address-content .item_clearfix .top .name{
      padding-left:15px;
      margin-right:10rpx;
      padding-top: 10px;
      padding-bottom: 4px;
      font-size:24rpx;
      float: left;
      width: 30%;
      color: #a4a4a4;
}
.address-content .item_clearfix .top .phone{
          float: left;
          padding-top: 10px;
           padding-bottom: 4px;
           color: #a4a4a4;
          font-size:24rpx;
 }
 .moren{
        display: inline-block;
        width:20rpx;
        height:20rpx;
        background-color: #fd0;
        position: absolute;
        top:26px;
        left:-5px;
        border-radius: 50%;
 }
    .address-content .item_clearfix .address_detail view{
      width: 100%;
      color:#282828;
      font-size:14px;
      line-height: 150%;
      font-weight: bold;
      text-indent:15px;
      white-space:nowrap;
       text-overflow:ellipsis;
        -o-text-overflow:ellipsis; 
        overflow:hidden;
    }
    .sure_mask{
           position: absolute;
            top:-80px;
            left: 0;
            width:100%;
            height:150%;
            background-color: rgba(0,0,0,.5);
            margin: 0;
            padding: 0;
            z-index:9999;
        }
        .sure_mask .sure_delete{
            background-color:#ff3500;
            width: 80.5%;
            margin: 60% auto; 
            height: 124px;
        }
        .sure_mask .sure_delete .text{
            color: #fff;
            font-weight: bold;
            font-size: 14px;
            margin:0 25px;
            padding-top: 25px;
        }
        .sure_mask .sure_delete .del_btn, .sure_mask .sure_delete .sure_btn{
            display: inline-block;
            width: 33%;
            margin: 25px;
            height: 25px;
            line-height: 25px;
        }
         .sure_mask .sure_delete .sure_btn{
           float: right;
            width: 23%;
            margin: 25px;
            height: 25px;
            line-height: 25px;
        }
        .sure_mask .del_btn{float: left}
        .sure_mask .sure_btn{float: left;text-align: right;}
        .sure_mask .del_btn image{
            width:26rpx;
            height:26rpx;
            vertical-align: middle;
        }
.sure_mask .sure_btn image{
    width:36rpx;
    height:26rpx;
    vertical-align: middle;
}    