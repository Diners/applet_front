      page{
         background-color: #f7f7f7;
      }
        .mui-segmented-control.mui-segmented-control-inverted .mui-control-item {
            display: inline-block;
            text-align: center;
            font-size: 28rpx;
            color: #aaa;
            width:160rpx;
            height: 68rpx;
            line-height: 68rpx;
            position: relative;
        }
        .mui-segmented-control.mui-segmented-control-inverted  .mui-control-item.mui-active{
            color: #fd0;
            border-bottom: none;
            font-weight: bolder;
        }
        .mui-segmented-control.mui-segmented-control-inverted  .mui-control-item.mui-active i{
            display: block;
            width:26rpx;
            height:6rpx;
            background-color:#fd0;
            margin: 0 auto;
            margin-top:18rpx;
            position: absolute;
            bottom: 0;
            left: 40%;
        }
        .mainWrapper{
            background-color:#f7f7f7 ;
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            overflow: hidden;
        }
        .mainWrapper .forGood{
          width:45%;
          margin: 20rpx 20rpx 0 10rpx;
        }
        .mainWrapper .item{
            width: 100%;
            height:455rpx;
            background-color: #fff;
           
            border-radius:7px ;
        }
        .mainWrapper .forGood:nth-child(odd){
            margin-left:20rpx;
        }
        .mainWrapper .forGood:nth-child(even){
           margin-right:20rpx;
        }
        .mainWrapper .item image{
            width: 240rpx;
            height: 240rpx;
            border-radius: 50%;
            margin: 52rpx;
            margin-bottom:28rpx;
        }
        .mainWrapper  .item  view{
            text-align: center;
            font-size: 24rpx;
            color:#282828;
            margin-bottom: 10rpx;
        }
        .mainWrapper  .item  view:nth-of-type(2){
            color: #ff5a5f;
            margin-bottom: 10rpx;
        }