  float: left;
  box-sizing: border-box;
}
.add_img image{
  width: 100%;
}
.add_font{
  width: 80%;
  height: 100%;
  float: left;
  padding-left: 50rpx;
  box-sizing: border-box;
}
.add_font text{
  font-size: 24rpx;
